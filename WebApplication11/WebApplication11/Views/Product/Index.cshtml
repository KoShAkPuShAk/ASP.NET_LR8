@model List<WebApplication11.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
    <style>
        body {
            background-color: #f5f5f5; /* Пом'якшений сірий фон */
            font-family: Arial, sans-serif; /* Встановлення шрифту */
            font-size: 16px;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h2 {
            margin-top: 30px;
            color: #333; /* Темний колір тексту */
        }

        .container {
            margin: 30px auto; /* Центрування контейнера */
            width: 80%;
            background-color: #fff; /* Світлий фон контейнера */
            border-radius: 10px; /* Закруглені кути контейнера */
            padding: 20px; /* Поля від країв контейнера */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Тінь контейнера */
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd; /* Встановлення рамки */
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2; /* Колір фону заголовків */
        }

        tr:nth-child(even) {
            background-color: #f9f9f9; /* Колір фону парних рядків */
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
            background-color: #fafafa; /* Світлий фон елементів списку */
            padding: 10px;
            border-radius: 5px;
            font-family: Arial, sans-serif; /* Встановлення шрифту */
            font-size: 16px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); /* Тінь елементів списку */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Products List</h2>

        <div>
            <h3>List View:</h3>
            <ul>
                @foreach (var product in Model)
                {
                        <li>@product.ID. @product.Name - @product.Price$ (@product.CreatedDate)</li>
                }
            </ul>
        </div>

        <div>
            <h3>Table View:</h3>
            <table>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Created Date</th>
                </tr>
                @foreach (var product in Model)
                {
                        <tr>
                            <td>@product.ID</td>
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td>@product.CreatedDate</td>
                        </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>